<%= styled_flash %>
<div id="rancor-new-poll" class="container">
    <div class="page-header">
        <h1>Create your poll</h1>
    </div>  <!-- .page-header -->
    <div class="jumbotron">
        <form class="form-horizontal" role="form" name="question-options-email" method="post">
            <div class="row">
                <label for="question" class="col-sm-2 control-label">Poll Question</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="question" id="question" maxlength="80">
                    <p class="limit-caption text-left">maximum 80 characters</p>
                </div>
            </div>  <!-- poll question row -->
            <div class="row">
                <label for="description" class="col-sm-2 control-label">Poll Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="description" id="description">
                </div>
            </div>  <!-- poll description row -->
            <div class="row">
                <label class="col-sm-2 control-label text-center">Poll Closing<br>Date/Time</label>
                <div class="col-sm-2 has-feedback" id="datepicker-container">
                    <input type="text" id="close-date-picker" class="form-control">
                    <i class="glyphicon glyphicon-calendar form-control-feedback"></i>
                </div>
                <div class="col-sm-2" id="timepicker-container">
                        <span class="pull-left"><select class="form-control text-center" id="hour"></select></span>
                    <!--    <span style="float:left"><select class="form-control text-center" id="minute"></select></span>  -->
                        <span class="pull-left"><select class="form-control text-center" id="ampm"></select></span>
                        <input type="text" id="closedate" name="closeDate" size="27" hidden="hidden">
                </div>
		        <% if env['warden'].authenticated? %>
                <div class="col-sm-1">
                    <div class="btn btn-danger" role="button" id="closedate-btn">
                        <i class="glyphicon glyphicon-time"></i>
                        <span id="closedate-btn-text">Do not close</span>
                    </div>
                </div>
                <% end %>
            </div>  <!-- poll closing row -->
            <div class="row">
                <div class="col-sm-6 text-center">
                    <div class="btn btn-default glyphicon glyphicon-minus" role="button" id="minus-btn-options"></div>
                    <input type="text" size="2" id="numOfOptions" value="2">
                    <div class="btn btn-default glyphicon glyphicon-plus" role="button" id="plus-btn-options"></div>
                    <p># of options</p>
                    <p class="limit-caption text-right">maximum 50 characters</p>
                    <div id="options"></div>
                </div>
                <div class="col-sm-6 text-center">
                    <div class="btn btn-default glyphicon glyphicon-minus" role="button" id="minus-btn-emails"></div>
                    <input type="text" size="2" id="numOfEmails" value="1">
                    <div class="btn btn-default glyphicon glyphicon-plus" role="button" id="plus-btn-emails"></div>
                    <p># of participants</p>
                    <div id="emails"></div>
                </div>
            </div>  <!-- option/participant input row -->
            <button type="submit" class="btn btn-info btn-lg" role="button">
                <i class="glyphicon glyphicon-ok"></i>
                Create
            </button>
            <label class="control-label same-ip">
                <input type="checkbox" id="allow-dup" name="allow_dup"> Allow multiple votes by same IP
            </label>
        </form>
    </div>  <!-- jumbotron -->
</div>  <!-- #rancor-new-poll -->
<script src="/js/new_poll.js"></script>
